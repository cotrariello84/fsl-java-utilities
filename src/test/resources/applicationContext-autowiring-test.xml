<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	http://www.springframework.org/schema/context 
    http://www.springframework.org/schema/context/spring-context-3.0.xsd">
 
	<context:component-scan base-package="com.fsl.spring.autowiring"/>
	
	<!-- Four kinds of autowiring. -->
	<!-- ByName -->
	<bean id="player" class="com.fsl.spring.autowiring.Player" 
             p:position="goalie" autowire="byName"/>
 
 	<bean id="county" class="com.fsl.spring.autowiring.County">
 		<constructor-arg value="Kerry"/>
 	</bean>
 
 	<!-- ByType -->
 	<!-- Look out if there multiples of the type below. will get exception -->
	<!-- Can use primary="false" to exclude a bean. -->
	<!-- NB Will have to exclude all beans except the primary -->
	<bean id="player1" class="com.fsl.spring.autowiring.Player" 
             p:position="goalie" autowire="byType"/>
 
 	<!-- By Constructor -->
 
 	<!--  
 	<bean id="player" class="com.fsl.spring.autowiring.Player" 
             p:position="goalie" autowire="constructor"/>
 
 -->
 
 
</beans>